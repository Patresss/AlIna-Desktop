<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<fx:root prefWidth="550.0" type="BorderPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <HBox styleClass="pane-button-bar" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <HBox styleClass="pane-button-bar" BorderPane.alignment="CENTER" />
   </right>
   <center>
      <StackPane fx:id="contentPane" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="15.0" />
         </BorderPane.margin>
         <children>
            <ScrollPane fitToHeight="true" fitToWidth="true">
              <content>
                  <VBox fx:id="settingsBox" />
              </content>
            </ScrollPane>
         </children>
      </StackPane>
   </center>
   <top>
      <GridPane BorderPane.alignment="CENTER">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Button mnemonicParsing="false" onAction="#back" text="Button">
               <graphic>
                  <FontIcon iconLiteral="mdal-arrow_back" />
               </graphic>
               <styleClass>
                  <String fx:value="button-circle" />
                  <String fx:value="flat" />
               </styleClass>
            </Button>
            <ButtonBar fx:id="buttonBar" buttonMinWidth="10.0" nodeOrientation="LEFT_TO_RIGHT" GridPane.columnIndex="1" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" />
         </padding>
      </GridPane>
   </top>
</fx:root>
