<fx:root styleClass="header-bar-button-box" type="HBox"  xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="6">
   <children>
      <Button minWidth="0.0" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onAction="#createAndOpenNewChatThread" text="Button">
         <graphic>
            <FontIcon iconLiteral="mdoal-create_new_folder" />
         </graphic>
         <styleClass>
            <String fx:value="button-circle" />
            <String fx:value="flat" />
         </styleClass>
      </Button>
      <Button minWidth="0.0" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onAction="#openThreadHistories" text="Button">
         <graphic>
            <FontIcon iconLiteral="mdal-history" />
         </graphic>
         <styleClass>
            <String fx:value="button-circle" />
            <String fx:value="flat" />
         </styleClass>
      </Button>
      <Button minWidth="0.0" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" text="Button">
         <graphic>
            <FontIcon iconLiteral="mdoal-info" />
         </graphic>
         <styleClass>
            <String fx:value="button-circle" />
            <String fx:value="flat" />
         </styleClass>
      </Button>
      <MenuButton mnemonicParsing="false"  styleClass="button-circle">
         <items>
            <MenuItem mnemonicParsing="false" onAction="#openAssistantSettings" text="%settings.assistant.title" />
            <MenuItem mnemonicParsing="false" onAction="#openUiSettings" text="%settings.ui.title" />
            <MenuItem mnemonicParsing="false" onAction="#openServerSettings" text="%settings.server.title" />
            <MenuItem mnemonicParsing="false" onAction="#openCommands" text="%command.title" />
            <MenuItem mnemonicParsing="false" onAction="#openIntegrations" text="%integration.title" />
            <MenuItem mnemonicParsing="false" onAction="#openLogs" text="%logs.title" />
         </items>
         <graphic>
            <FontIcon iconLiteral="mdmz-settings" />
         </graphic>
         <styleClass>
            <String fx:value="no-arrow" />
            <String fx:value="flat" />
            <String fx:value="button-circle" />
         </styleClass>
      </MenuButton>
      <ToggleButton fx:id="pinToggleButton" mnemonicParsing="false" styleClass="button-circle">
         <graphic>
            <FontIcon iconLiteral="mdrmz-pin" styleClass="button-circle" />
         </graphic>
      </ToggleButton>
   </children>
</fx:root>

